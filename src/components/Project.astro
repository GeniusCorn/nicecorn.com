---
interface Props {
  url: string
  github: string
  archived?: boolean
  notWorking?: boolean
}

const { url, github, archived, notWorking } = Astro.props
---

<div
  class="flex gap-2 justify-between hover:bg-slate-100 rounded-xl p-2 mb-2 transition"
>
  <div class="text-4xl flex-none">
    <slot name="icon" />
  </div>

  <div class="w-full">
    <div class="font-display flex gap-2 items-center">
      <slot name="title" />

      {
        archived && (
          <div class="text-white bg-yellow-500 box-border px-2 rounded-full text-xs text-center">
            Archived
          </div>
        )
      }

      {
        notWorking && (
          <div class="text-white bg-red-500 box-border px-2 rounded-full text-xs text-center">
            OUT OF SERVICE
          </div>
        )
      }
    </div>

    <div class="font-sans">
      <slot name="content" />
    </div>
  </div>

  <div class="flex items-center gap-2">
    <a
      class="i-tabler-brand-github i-tabler-arrow-big-right-line text-3xl text-black hover:i-tabler-brand-github-filled hover:text-slate transition ease-in-out duration-200"
      href={github}
      target="_blank"
    ></a>
    <a
      class="i-tabler-arrow-big-right-line text-3xl text-black hover:i-tabler-arrow-big-right-lines-filled hover:text-slate transition ease-in-out duration-200"
      href={url}
      target="_blank"
    >
    </a>
  </div>
</div>
