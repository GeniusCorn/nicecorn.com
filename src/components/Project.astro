---
interface Props {
  url: string
  archived?: boolean
  hot?: boolean
}

const { url, archived, hot } = Astro.props
---

<div
  class="flex gap-2 justify-between hover:bg-slate-100 rounded-xl p-2 mb-2 transition"
>
  <div class="text-4xl flex-none">
    <slot name="icon" />
  </div>

  <div class="w-full">
    <div class="font-display flex gap-2 items-center">
      <slot name="title" />

      {
        hot && (
          <div class="text-white bg-red-500 box-border px-2 rounded-full text-xs text-center">
            Hot
          </div>
        )
      }

      {
        archived && (
          <div class="text-white bg-yellow-500 box-border px-2 rounded-full text-xs text-center">
            Archived
          </div>
        )
      }
    </div>

    <div class="font-sans">
      <slot name="content" />
    </div>
  </div>

  <a
    class="flex"
    href={url}
    target="_blank"
  >
    <div
      class="i-tabler-arrow-big-right-line text-3xl text-black flex-none self-center hover:i-tabler-arrow-big-right-lines-filled hover:text-slate transition ease-in-out duration-200"
    >
    </div>
  </a>
</div>
